<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:visibility="gone">
        <Button
            android:id="@+id/button_all"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_select"
            android:hint="全部"
            android:textColorHint="@color/select" />
        <Button
            android:id="@+id/button_pos"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_unselect"
            android:hint="正面"
            android:textColorHint="@color/select_color" />
        <Button
            android:id="@+id/button_neg"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/button_unselect"
            android:hint="负面"
            android:textColorHint="@color/select_color" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBarinMuseum"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_inmuseum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_tab1"
        android:text="已到达底部~"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"/>
</LinearLayout>