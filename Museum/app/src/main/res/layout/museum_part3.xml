<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingTop="15dp"
    app:contentPaddingBottom="25dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.zhengsr.tablib.view.flow.TabFlowLayout
            android:id="@+id/rectflow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            app:tab_type="rect"
            app:tab_color="@color/select"
            app:tab_height="2dp"
            app:tab_margin_b="3dp" />
        <com.example.museum.Components.MyViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#15FFFDFD"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>